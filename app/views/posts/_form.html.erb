<div class="container">
  <div class="row justify-content-center">

    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= simple_form_for @post do |f| %>
            <%= f.input :content,
                        label: 'Post Content',
                        input_html: { rows: 4, class: 'form-control' } %>
                        <div class="mb-3">

            <%= f.input :photo,
                                as: :file,
                                label: 'Upload Image',
                                input_html: { class: 'form-control' } %>
                        </div>

            <div class="mb-3">
              <%= f.association :interests,
                              as: :check_boxes,
                              collection: Interest.all,
                              label: 'Select Interests',
                              include_blank: false,
                              input_html: { class: 'form-check-input' },
                              item_wrapper_class: 'form-check mb-2',
                              wrapper_html: { class: 'border rounded p-3' } %>
            </div>

            <%= f.button :submit, class: 'btn btn-primary w-100' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

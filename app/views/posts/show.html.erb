<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title"><%= @post.content %></h1>
      <p class="card-text text-muted">
        Posted by <%= @post.user.username %> on <%= @post.created_at.strftime("%B %d, %Y") %>
      </p>

      <% if @post.media_url.present? %>
        <img src="<%= @post.media_url %>" alt="Post media" class="img-fluid rounded mb-3" />
      <% end %>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div data-controller="like"
             data-like-post-id-value="<%= @post.id %>"
             data-like-liked-value="<%= user_signed_in? && current_user.likes.exists?(post: @post) %>">
          <i class="<%= user_signed_in? && current_user.likes.exists?(post: @post) ? 'fas fa-heart text-danger' : 'far fa-heart' %>"
             data-action="click->like#toggleLike"
             style="cursor: pointer; font-size: 24px;">
          </i>
        </div>
        <div>
          <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Back to Posts', posts_path, class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>
  </div>

  <h2 class="mt-4">Comments</h2>
  <div class="list-group mb-4">
    <% @post.comments.each do |comment| %>
      <div class="list-group-item">
        <strong><%= comment.user.username %>:</strong>
        <span><%= comment.content %></span>
        <% if comment.user == current_user %>
          <%= link_to 'Delete', post_comment_path(@post, comment), class: 'btn btn-danger btn-sm float-end', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>
      </div>
    <% end %>
  </div>



    <% if user_signed_in? %>
      <div class="card">
        <div class="card-body">
          <%= form_with(model: [@post, Comment.new], local: true) do |form| %>
            <div class="mb-3">
              <%= form.text_area :content, rows: 3, class: 'form-control', placeholder: 'Add a comment...' %>
            </div>
            <%= form.submit 'Post Comment', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="mt-3"><%= link_to 'Sign in to comment', new_user_session_path, class: 'btn btn-link' %></p>
  </div>

<h1>Users Following You</h1>

  <% if @followers.any? %>
    <ul>
      <% @followers.each do |user| %>
        <li>
          <%= link_to user.username, profile_path(user) %>
          <%#= image_tag user.profile_picture if user.profile_picture.present? %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>You've got no friends, soz.</p>
  <% end %>
